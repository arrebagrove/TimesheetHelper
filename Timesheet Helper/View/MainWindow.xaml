<Window x:Class="TimesheetHelper.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetHelper.View"       
        mc:Ignorable="d"
        Title="Time-sheet Saver" Height="350" Width="350" MinWidth="370" 
        Loaded="Window_Loaded" Closed="Window_Closed">
    <TabControl>
        <TabItem Header="Time-sheet">
            <local:TimesheetTab></local:TimesheetTab>
        </TabItem>
        
        <TabItem Header="Settings">
            <local:SettingsTab></local:SettingsTab>
        </TabItem>
        <TabItem Header="About"></TabItem>
    </TabControl>
</Window>
